<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="275dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@android:color/white"
    app:cardCornerRadius="5dp"
    app:cardElevation="6dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:id="@+id/rlbCardViewItemListFieldSoccer"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_margin="2dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgItemListFieldSoccerProfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:elevation="10dp"
                android:src="@drawable/cancha" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_alignParentBottom="true"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/txtNameFieldSoccer"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:padding="2dp"
                    android:text="Titulo"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/txtDescriptionFieldSoccer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/txtNameFieldSoccer"
                    android:padding="2dp"
                    android:text="Descripcion"
                    android:textAlignment="center"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="13dp" />


            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:layout_below="@id/rlbCardViewItemListFieldSoccer"
            android:background="@android:color/darker_gray" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/rlbCardViewItemListFieldSoccer">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="horizontal"
                android:weightSum="3">

                <RelativeLayout
                    android:id="@+id/rlb1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1">


                    <CheckBox
                        android:id="@+id/checkboxFavoriteItemListFieldSoccer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="1dp"


                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/checkboxFavoriteItemListFieldSoccer"
                        android:layout_centerHorizontal="true"
                        android:text="@string/Favorite"
                        android:textColor="@android:color/black"
                        android:textSize="10sp" />


                </RelativeLayout>

                <View
                    android:layout_width="0.4dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="18dp"
                    android:layout_marginTop="18dp"
                    android:background="@android:color/darker_gray" />

                <RelativeLayout
                    android:id="@+id/rlb2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/btnReserveItemListFieldSoccer"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border_button_item_list_field_soccer"
                        android:padding="1dp"
                        android:text="@string/Reserve"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="10sp" />


                </RelativeLayout>

                <View
                    android:layout_width="0.4dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="18dp"
                    android:layout_marginTop="18dp"
                    android:background="@android:color/darker_gray" />

                <RelativeLayout
                    android:id="@+id/rlb3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1">


                    <Button
                        android:id="@+id/btnCommentItemListFieldSoccer"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/border_button_item_list_field_soccer"
                        android:padding="1dp"
                        android:text="@string/Comment"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"
                        android:textSize="10sp" />


                </RelativeLayout>


            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>


</android.support.v7.widget.CardView>